{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 4,
        "minor": 1,
        "patch": 0
    },
    "include": ["./ConanPresets.json"],
    "configurePresets": [
        {
            "name": "vtDefault",
            "description": "The default configuration for the vulkan triangle using Ninja Multi-Config generator.",
            "inherits": "conan-default",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/vtDefault",
            "toolchainFile": "${sourceDir}/build/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": { "type": "BOOL",   "value": true },
                "CMAKE_CONFIGURATION_TYPES":     { "type": "STRING", "value": "Debug;Release" },
                "CMAKE_C_FLAGS_DEBUG":           { "type": "STRING", "value": "-Wall -Wextra" },
                "CMAKE_C_FLAGS_RELEASE":         { "type": "STRING", "value": "-Wall -Wextra" },
                "CMAKE_CXX_FLAGS_DEBUG":         { "type": "STRING", "value": "-Wall -Werror" },
                "CMAKE_CXX_FLAGS_RELEASE":       { "type": "STRING", "value": "-Wall -Werror" }
            }
        }
    ],
    "buildPresets": [
        { "name": "vtDebug",   "configurePreset": "vtDefault", "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtRelease", "configurePreset": "vtDefault", "configuration": "Release", "inherits": "conan-release" }
    ],
    "testPresets": [
        { "name": "vtDebug",   "configurePreset": "vtDefault", "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtRelease", "configurePreset": "vtDefault", "configuration": "Release", "inherits": "conan-release" }
    ],
    "workflowPresets": [
        {
            "name": "vtDebug",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDebug" }
            ]
        },
        {
            "name": "vtRelease",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtRelease" }
            ]
        },
        {
            "name": "vtAll",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDebug" },
                { "type": "build",     "name": "vtRelease" },
                { "type": "test",      "name": "vtDebug" },
                { "type": "test",      "name": "vtRelease" }
            ]
        }
    ]
}
