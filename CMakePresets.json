{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 0
    },
    "include": ["./ConanPresets.json"],
    "configurePresets": [
        {
            "name": "vtDefault",
            "description": "The default configuration for the vulkan triangle using Ninja Multi-Config generator.",
            "inherits": "conan-default",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/vulkan-triangle",
            "toolchainFile": "${sourceDir}/build/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": { "type": "BOOL",   "value": true },
                "CMAKE_CONFIGURATION_TYPES":     { "type": "STRING", "value": "Debug;Release" },
                "CMAKE_C_FLAGS_DEBUG_INIT":      { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion         -ggdb -O0" },
                "CMAKE_C_FLAGS_RELEASE_INIT":    { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion               -O2" },
                "CMAKE_CXX_FLAGS_DEBUG_INIT":    { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion -Werror -ggdb -O0" },
                "CMAKE_CXX_FLAGS_RELEASE_INIT":  { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion -Werror       -O2" }
            }
        },
        {
            "name": "vtMSVC",
            "description": "The default configuration for the vulkan triangle using Ninja Multi-Config generator.",
            "inherits": "conan-default",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/vulkan-triangle",
            "toolchainFile": "${sourceDir}/build/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": { "type": "BOOL",   "value": true },
                "CMAKE_CONFIGURATION_TYPES":     { "type": "STRING", "value": "Debug;Release" },
                "CMAKE_C_FLAGS_DEBUG_INIT":      { "type": "STRING", "value": "/W4 /WX /Od" },
                "CMAKE_C_FLAGS_RELEASE_INIT":    { "type": "STRING", "value": "/W4 /WX /O2" },
                "CMAKE_CXX_FLAGS_DEBUG_INIT":    { "type": "STRING", "value": "/W4 /WX /Od" },
                "CMAKE_CXX_FLAGS_RELEASE_INIT":  { "type": "STRING", "value": "/W4 /WX /O2" }

            }
        }
    ],
    "buildPresets": [
        { "name": "vtDebug",       "configurePreset": "vtDefault", "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtRelease",     "configurePreset": "vtDefault", "configuration": "Release", "inherits": "conan-release" },
        { "name": "vtMSVCDebug",   "configurePreset": "vtMSVC",    "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtMSVCRelease", "configurePreset": "vtMSVC",    "configuration": "Release", "inherits": "conan-release" }
    ],
    "testPresets": [
        { "name": "vtDebug",       "configurePreset": "vtDefault", "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtRelease",     "configurePreset": "vtDefault", "configuration": "Release", "inherits": "conan-release" },
        { "name": "vtMSVCDebug",   "configurePreset": "vtMSVC",    "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtMSVCRelease", "configurePreset": "vtMSVC",    "configuration": "Release", "inherits": "conan-release" }
    ],
    "workflowPresets": [
        {
            "name": "vtDebug",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDebug" },
                { "type": "test",      "name": "vtDebug" }
            ]
        },
        {
            "name": "vtRelease",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtRelease" },
                { "type": "test",      "name": "vtRelease" }
            ]
        },
        {
            "name": "vtMSVCDebug",
            "steps": [
                { "type": "configure", "name": "vtMSVC" },
                { "type": "build",     "name": "vtMSVCDebug" },
                { "type": "test",      "name": "vtMSVCDebug" }
            ]
        },
        {
            "name": "vtMSVCRelease",
            "steps": [
                { "type": "configure", "name": "vtMSVC" },
                { "type": "build",     "name": "vtMSVCRelease" },
                { "type": "test",      "name": "vtMSVCRelease" }
            ]
        },
        {
            "name": "vtAll",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDebug" },
                { "type": "build",     "name": "vtRelease" },
                { "type": "test",      "name": "vtDebug" },
                { "type": "test",      "name": "vtRelease" }
            ]
        },
        {
            "name": "vtMSVCAll",
            "steps": [
                { "type": "configure", "name": "vtMSVC" },
                { "type": "build",     "name": "vtMSVCDebug" },
                { "type": "build",     "name": "vtMSVCRelease" },
                { "type": "test",      "name": "vtMSVCDebug" },
                { "type": "test",      "name": "vtMSVCRelease" }
            ]
        }
    ]
}
