{
    "version": 9,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 0
    },
    "include": ["./ConanPresets.json"],
    "configurePresets": [
        {
            "name": "vtCommon",
            "description": "Common configuration for the vulkan triangle.",
            "inherits": "conan-default",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/vulkan-triangle",
            "toolchainFile": "${sourceDir}/build/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": { "type": "BOOL",   "value": true },
                "CMAKE_CONFIGURATION_TYPES":     { "type": "STRING", "value": "Debug;Release" }
            }
        },
        {
            "name": "vtDefault",
            "description": "The default configuration for the vulkan triangle using Ninja Multi-Config generator.",
            "inherits": "vtCommon",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_C_FLAGS_DEBUG_INIT":      { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion         -fdiagnostics-color=always -ggdb -O0" },
                "CMAKE_C_FLAGS_RELEASE_INIT":    { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion         -fdiagnostics-color=always       -O2" },
                "CMAKE_CXX_FLAGS_DEBUG_INIT":    { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion -Werror -fdiagnostics-color=always -ggdb -O0" },
                "CMAKE_CXX_FLAGS_RELEASE_INIT":  { "type": "STRING", "value": "-Wall -Wpedantic -Wextra -Wconversion -Werror -fdiagnostics-color=always       -O2" }
            }
        },
        {
            "name": "vtMSVC",
            "description": "The MSVC configuration for the vulkan triangle using Visual Studio generator.",
            "inherits": "vtCommon",
            "generator": "Visual Studio 17 2022",
            "cacheVariables": {
                "CMAKE_C_FLAGS_DEBUG_INIT":      { "type": "STRING", "value": "/W4 /WX /Od" },
                "CMAKE_C_FLAGS_RELEASE_INIT":    { "type": "STRING", "value": "/W4 /WX /O2" },
                "CMAKE_CXX_FLAGS_DEBUG_INIT":    { "type": "STRING", "value": "/W4 /WX /Od" },
                "CMAKE_CXX_FLAGS_RELEASE_INIT":  { "type": "STRING", "value": "/W4 /WX /O2" }
            }
        },
        {
            "name": "vtDefaultLint",
            "description": "The default linter configuration for the vulkan triangle.",
            "inherits": "vtDefault",
            "binaryDir": "${sourceDir}/build/vulkan-triangle/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": { "type": "STRING", "value": "Debug" },
                "ENABLE_LINT":      { "type": "BOOL",   "value": true }
            }
        }
    ],
    "buildPresets": [
        { "name": "vtDefaultLint",    "configurePreset": "vtDefaultLint", "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtDefaultDebug",   "configurePreset": "vtDefault",     "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtDefaultRelease", "configurePreset": "vtDefault",     "configuration": "Release", "inherits": "conan-release" },
        { "name": "vtMSVCDebug",      "configurePreset": "vtMSVC",        "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtMSVCRelease",    "configurePreset": "vtMSVC",        "configuration": "Release", "inherits": "conan-release" }
    ],
    "testPresets": [
        { "name": "vtDefaultLint",    "configurePreset": "vtDefaultLint", "configuration": "Lint",    "inherits": "conan-debug" },
        { "name": "vtDefaultDebug",   "configurePreset": "vtDefault",     "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtDefaultRelease", "configurePreset": "vtDefault",     "configuration": "Release", "inherits": "conan-release" },
        { "name": "vtMSVCDebug",      "configurePreset": "vtMSVC",        "configuration": "Debug",   "inherits": "conan-debug" },
        { "name": "vtMSVCRelease",    "configurePreset": "vtMSVC",        "configuration": "Release", "inherits": "conan-release" }
    ],
    "workflowPresets": [
        {
            "name": "vtDefaultLint",
            "steps": [
                { "type": "configure", "name": "vtDefaultLint" },
                { "type": "build",     "name": "vtDefaultLint" },
                { "type": "test",      "name": "vtDefaultLint" }
            ]
        },
        {
            "name": "vtDefaultDebug",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDefaultDebug" },
                { "type": "test",      "name": "vtDefaultDebug" }
            ]
        },
        {
            "name": "vtDefaultRelease",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDefaultRelease" },
                { "type": "test",      "name": "vtDefaultRelease" }
            ]
        },
        {
            "name": "vtMSVCDebug",
            "steps": [
                { "type": "configure", "name": "vtMSVC" },
                { "type": "build",     "name": "vtMSVCDebug" },
                { "type": "test",      "name": "vtMSVCDebug" }
            ]
        },
        {
            "name": "vtMSVCRelease",
            "steps": [
                { "type": "configure", "name": "vtMSVC" },
                { "type": "build",     "name": "vtMSVCRelease" },
                { "type": "test",      "name": "vtMSVCRelease" }
            ]
        },
        {
            "name": "vtDefaultAll",
            "steps": [
                { "type": "configure", "name": "vtDefault" },
                { "type": "build",     "name": "vtDefaultDebug" },
                { "type": "build",     "name": "vtDefaultRelease" },
                { "type": "test",      "name": "vtDefaultDebug" },
                { "type": "test",      "name": "vtDefaultRelease" }
            ]
        },
        {
            "name": "vtMSVCAll",
            "steps": [
                { "type": "configure", "name": "vtMSVC" },
                { "type": "build",     "name": "vtMSVCDebug" },
                { "type": "build",     "name": "vtMSVCRelease" },
                { "type": "test",      "name": "vtMSVCDebug" },
                { "type": "test",      "name": "vtMSVCRelease" }
            ]
        }
    ]
}
